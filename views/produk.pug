doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title MK Pemrograman Web
  body
    h1 Daftar Produk
    a(href='/') Kembali
    br
    br
    table 
      tr
        th ID
        th Product Name
        th Unit Price
      each product in products
        tr
          td #{product.ProductID}
          td 
            a(href=`/produk/${product.ProductID}`) #{product.ProductName}
          td $#{product.UnitPrice}